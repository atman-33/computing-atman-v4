{
  "name": "@computing-atman-v4/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "sereve:all": "npx concurrently --kill-others-on-fail \"npm:start:*\"",
    "----START----": "-------------------------",
    "start:gql:watch": "graphql-codegen --config tools/graphql-codegen/codegen.yml --watch",
    "start:db:watch": "npm run db:dockers:dev  && npm run db:migrate:dev && npm run db:seed:dev && prisma generate --watch",
    "start:verify-env": "npm run validate:web-env && npm run validate:api-env",
    "start:api": "nx serve api",
    "start:web": "nx serve web",
    "----NX SECTION----": "-------------------------",
    "build": "nx build",
    "test": "nx test",
    "----DB SECTION----": "-------------------------",
    "db:dockers:dev": "docker-compose -f tools/atman-environment/dev.docker-compose.yml up -d --no-recreate --remove-orphans",
    "db:migrate:dev": "npx env-cmd -f .env.local npx prisma migrate dev",
    "db:studio": "npx env-cmd -f .env.local npx prisma studio",
    "db:seed:dev": "npx env-cmd -f .env.local ts-node --project tools/tsconfig.tools.json tools/database/seed.dev.ts",
    "----VALIDATE ENV SECTION----": "--------------------------------",
    "validate:web-env": "npx env-cmd -f .env.local ts-node --project tools/tsconfig.tools.json tools/environment/validate-web-env.ts",
    "validate:api-env": "npx env-cmd -f .env.local ts-node --project tools/tsconfig.tools.json tools/environment/validate-api-env.ts",
    "----TOOLS SECTION----": "-------------------------",
    "verify": "nx affected:lint --fix --all && nx format:write && nx format:check && nx affected --target=lint --fix --parallel=3 && npx nx affected --target=test --parallel=3 && nx affected --target=build --parallel=3 --exclude=web",
    "----DEPLOY SECTION----": "-----------------------",
    "cd:api": "npm run validate:api-env && npm run cd:db-push && npm run cd:db-seed  && npx nx build api --prod",
    "cd:web": "npm run validate:web-env && npx nx build web --prod",
    "cd:web-admin": "npm run validate:web-admin-env && npx nx build web-admin --prod",
    "cd:db-push": "npx prisma db push --accept-data-loss",
    "cd:db-seed": "npx ts-node --project tools/tsconfig.tools.json tools/database/seed.dev.ts"
  },
  "private": true,
  "dependencies": {
    "@mercuriusjs/gateway": "^1.2.0",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/mercurius": "^12.0.4",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/platform-fastify": "^10.1.3",
    "@prisma/client": "^5.1.1",
    "@swc/helpers": "~0.5.0",
    "axios": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "graphql": "^16.8.0",
    "mercurius": "^13.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/eslint-plugin": "16.6.0",
    "@nx/jest": "16.6.0",
    "@nx/js": "16.6.0",
    "@nx/linter": "16.6.0",
    "@nx/nest": "16.6.0",
    "@nx/node": "16.6.0",
    "@nx/webpack": "16.6.0",
    "@nx/workspace": "16.6.0",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.51",
    "@swc/jest": "0.2.20",
    "@types/jest": "^29.4.0",
    "@types/node": "~18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "env-cmd": "^10.1.0",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "jest": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "nx": "16.6.0",
    "prettier": "^2.6.2",
    "prisma": "^5.1.1",
    "prisma-nestjs-graphql": "^19.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.1.3"
  },
  "prisma": {
    "schema": "libs/api/data-access-db/src/lib/schema.prisma"
  }
}
